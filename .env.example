# MongoDB Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/ecochain?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Server Configuration
PORT=4000
NODE_ENV=development

# Token Economy Configuration
TOKEN_TO_MONEY_RATE=0.1
MAX_TOKEN_USAGE_PERCENTAGE=30

# Base Token Rewards (per kg)
BASE_REWARD_PLASTIC=10
BASE_REWARD_PAPER=5
BASE_REWARD_METAL=15
BASE_REWARD_GLASS=8
BASE_REWARD_ELECTRONIC=20
BASE_REWARD_ORGANIC=3

# Quality Multipliers
QUALITY_MULTIPLIER_EXCELLENT=1.5
QUALITY_MULTIPLIER_GOOD=1.2
QUALITY_MULTIPLIER_FAIR=1.0
QUALITY_MULTIPLIER_POOR=0.7

# Platform Business Rules
PLATFORM_COMMISSION=0.08
FACTORY_PARTNERSHIP_FEE=5000
MINIMUM_ORDER_VALUE=100

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SMS Configuration (optional)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-ga-id